import prisma from "./../libs/prismadb";

interface IParams {
    userId?: string;
}

export default async function getComments(params: IParams) {

    try {
        const { userId } = params;

        const query: any = {};


        if (userId) {
            query.userId = userId;
        }

        const listingsCount = await prisma.listing.count({
            where:
                query
            ,
        });
        return listingsCount
    } catch (error: any) {
        throw new Error(error);
    }
}